<% breadcrumb(:email_campaign_sent, @email_campaign) %>
<div class="ui masthead vertical segment">
  <div class="ui container">
    <div class="introduction">
      <h1 class="ui header">
        <%= link_to @contact.full_name, @contact %>
        <div class="sub header">Email Campaign</div>
      </h1>
      <div class="ui hidden divider"></div>
    </div><!-- /.introduction -->
  </div><!-- /.ui container -->
</div><!-- /.ui masthead vertical tab segment -->
<!--END HEADER-->

<div class="ui main container">
  <%= render(partial: 'shared/contacts_email_campaign_stats') %>

  <table class="ui single table">
    <thead>
      <tr>
        <th width="25%">Sent</th>
        <th>Campaign</th>
      </tr>
    </thead>
    <tbody>
      <% @campaigns.each do |campaign| %>
        <tr>
          <td>
            <%= campaign.created_at.strftime("%B %d, %Y") %><br>
            <%= campaign.created_at.strftime("%I:%M%P") %>
          </td>
          <td class="breakword">
            <%= link_to EmailCampaign.find(campaign.email_campaign_id).name, email_campaign_path(EmailCampaign.find(campaign.email_campaign_id)) %><br>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table><!-- /.ab-table -->
</div><!-- /.ui main container -->
