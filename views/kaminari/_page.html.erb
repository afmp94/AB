<%#= link_to(
  page,
  page.current? ? "#" : url,
  {
    remote: remote,
    class: "item #{"active" if page.current?}",
    rel: page.next? ? "next" : page.prev? ? "prev" : nil
  }
) %>

<% if page.current? %>
  <%= link_to(url, class: "item active", title: page, remote: remote) do %>
    <%= page %>
  <% end %>
<% else %>
  <%= link_to(url, class: "item", title: page, remote: remote) do %>
    <%= page %>
  <% end %>
<% end %>
