<%= simple_form_for [@commentable, @comment], remote: true do |f| %>
  <%= f.input :content,
              label: false,
              input_html: { class: "form-control below12", rows: 2 } %>

  <%= f.button(
    :submit,
    class: "ui button primary",
    value: "Save",
   "data-disable-with": "Saving..."
  ) %>
<% end %>
