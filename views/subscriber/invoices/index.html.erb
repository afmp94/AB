<% content_for(:title, "Invoices") %>
<% breadcrumb(:invoices) %>
<%= page_header(
  primary_name: "Billing",
  primary_path: billing_path,
  secondary_name: "View Invoices"
) %>

<div class="ui main container">
  <table class="ui single line table">
    <thead>
      <tr>
        <th>Number</th>
        <th>Date</th>
        <th>Total</th>
        <th>Balance</th>
      </tr>
    </thead>
    <tbody>
      <%= render(partial: "invoice", collection: @invoices) %>
    </tbody>
  </table>
</div><!-- /.ui main container -->

