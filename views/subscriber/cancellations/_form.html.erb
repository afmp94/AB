<%= simple_form_for(@cancellation, url: [:subscriber, :cancellation], html: { class: "" }) do |form| %>
  <%= form.input(:reason, as: :text, label: t("subscriptions.reason"), hint: t("subscriptions.reason_explanation"), required: true) %>
  <% if @cancellation_alternative.can_switch_to_discounted_plan? %>
    <%= form.button(:submit, t("subscriptions.confirm_cancel_reject_deal"), class: "btn btn-danger text-uppercase") %>
  <% else %>
    <%= form.button(
      :submit, t("subscriptions.confirm_cancel"),
      class: "ui negative button",
      "data-disable-with": "Cancelling..."
    ) %>
  <% end %>
<% end %>
