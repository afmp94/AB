<div class="ui masthead vertical segment compressed">
  <div class="ui container">
    <div class="introduction">
        <h1 class="ui header">
          <%= primary_name if local_assigns[:primary_name] %>
          <div class="sub header"><%= secondary_name if local_assigns[:secondary_name] %></div>
        </h1>
    </div><!-- /.introduction -->
  </div><!-- /.ui container -->
</div><!-- /.ui masthead vertical tab segment -->

<div class="main ui container full-width-container">
  <div class="ui horizontal segments no-border m-a-0 settings-segments">
    <div class="ui basic vertical segment no-border settings-segments__menu">
      <%= render(partial: "shared/settings/menu_sidebar") %>
    </div><!-- /.ui segment -->
    <div class="ui basic vertical segment no-border">
      <%= yield %>
    </div><!-- /.ui segment -->
  </div><!-- /.ui horizontal segments -->
</div><!-- /.main ui container -->
