<div id="new-referral-activity" class="ui modal" style="display: none;">
  <%= simple_form_for(@contact_activity) do |f| %>
    <div class="header">
      <h3 class="modal-title">Add New Referral Activity</h3>
    </div>

    <div class="content">
      <%= f.error_notification %>
      <%= f.input :activity_type %>
      <%= f.input :subject %>
      <%= f.input :completed_at %>
      <%= f.input :comments,  :input_html => { :rows => 6 } %>
    </div>
    <div class="actions">
      <%= f.button(
        :submit,
        class: "ui primary button",
        "data-disable-with": "Saving...",
        value: "Submit"
      ) %>
      <%= link_to(
        'Cancel', contact_activities_path,
        class: "new-record-cancel"
      ) %>
    </div>
  <% end %>
</div>

