<div class="ui <%= "icon" if local_assigns[:icon_class] %> message">
  <% if local_assigns[:icon_class] %>
    <i class="<%= icon_class %> big icon"></i>
  <% end %>
  <div class="content">
    <% if local_assigns[:block] %>
      <%= capture(&block) %>
    <% else %>
      <div class="header"><%= header %></div>
      <p><%= content %></p>
    <% end %>
  </div><!-- /.content -->
</div><!-- /.ui message -->
