<% if property.level_of_interest != "Contract Cancelled" %>
  <div class="dropdown inline">
    <a class="dropdown-toggle clickable" data-toggle="dropdown">
      <%= property.level_of_interest.blank? ? "Click to set" : property.level_of_interest.titleize %><span class="caret"></span>
    </a>
    <ul class="dropdown-menu" role="menu">
      <li>
        <%= link_to(
          "Possible",
          set_level_of_interest_lead_property_path(@lead, property, { level_of_interest: "Possible" })
        ) %>
      </li>
      <li>
        <%= link_to(
          "Interested",
          set_level_of_interest_lead_property_path(@lead, property, { level_of_interest: "Interested" })
        ) %>
      </li>
      <li>
        <%= link_to(
          "Not Interested",
          set_level_of_interest_lead_property_path(@lead, property, { level_of_interest: "Not Interested" })
        ) %>
      </li>
      <li>
        <%= link_to(
          "Not Available",
          set_level_of_interest_lead_property_path(@lead, property, { level_of_interest: "Not Available" })
        ) %>
      </li>
    </ul>
  </div><!-- /dropdown -->
<% end %>
