<div class="row">
  <div class="col-xs-12">
    <h3>Property Information</h3>
    <%= f.simple_fields_for(:address) do |address_form| %>
      <%= render("addresses/form", f: address_form) %>
    <% end %>
    <%= f.input(
      :property_type,
      as: :select,
      collection: Property::PROPERTY_TYPES,
      include_blank: false, label: "Property Type"
    ) %>
    <div class="row multiple-fields">
      <div class="col-sm-6">
        <%= f.input(:mls_number, label: "MLS Number") %>
      </div>
      <div class="col-sm-6">
        <%= f.input(
          :list_price,
          label: "List Price",
          as: :currency
        ) %>
      </div>
    </div>
    <%= f.input(:property_url, label: "Property URL") %>
    <%= f.input(:notes, input_html: { class: "form-control below12", rows: 4 }) %>
  </div>
</div>
