
<% if thread_unread_class(thread) == "unread" %>
  <%= button_to "Mark as Read", mark_thread_as_read_path("thread_id" => thread.id, "url" => request.original_url) %>
<% end %>
<%= link_to display_thread_path("contact_id" => @contact.id, "thread_id" => thread.id, "url" => request.original_url), class: "thread", id: "#{thread.id}" do %>
  <div class="<%= thread_unread_class(thread) %> unseen important sent all inbox ">
    <div>
      <in-participant-bubble email="keithanderle@gmail.com">
        <div class="participant-bubble" style="background-image: url(http://www.gravatar.com/avatar/c6ae83742f1f99ae9b133bf6e8cf2f24?d=blank); background-color: rgb(225, 213, 81); background-size: cover;"></div>
      </in-participant-bubble>
      <div class="participants"><%= list_participants(thread, "participants") %></div>
      <div class="date"><%= email_list_datetime(Time.at(thread.last_message_timestamp)) %></div>
      <div class="snippet">
        <span class="subject"><%= thread.subject %></span> <%= thread.snippet %>
      </div>
    </div>
  </div>
<% end %><!-- /.thread -->
