<div class="ui hidden divider"></div><!-- /.ui hidden divider -->
<h2 class="ui dividing header">
  Text Message Templates
  <div class="sub header">
    Add and view the templates you can use when sending text messages
  </div><!-- /.sub header -->
</h2>

<%= link_to(
  new_user_settings_text_message_template_path,
  class: "ui primary labeled icon button"
) do %>
  <i class="plus icon"></i>
  Create a new template
<% end %>

<div class="ui hidden divider"></div><!-- /.ui hidden divider -->

<table class="ui very basic table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @text_message_templates.each do |text_message_template| %>
      <tr>
        <td class="fwb">
          <%= link_to(
            text_message_template.name,
            edit_user_settings_text_message_template_path(text_message_template)
          ) %>
        </td>
        <td><%= text_message_template.body %></td>
        <td class="collapsing">
          <% if text_message_template.user == current_user %>
            <%= "Shared to teammates" if text_message_template.shared %>
          <% else %>
            Shared from <%= text_message_template.user&.name %>
          <% end %>
        </td>
        <td class="collapsing">
          <% if text_message_template.user == current_user %>
            <%= link_to(
              ["user_settings", text_message_template],
              class: "negative basic ui icon button",
              method: :delete,
              data: { confirm: "Are you sure you want to delete this Text Message Template?" }
            ) do %>
              <i class="trash icon"></i>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table><!-- /.ui very basic table -->

