<% content_for(:title, "Create a new account") %>

<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <%= image_tag(white_label_image_name("box-114-transparent.png", current_subdomain), class: "image") %>
      <div class="content">
        Sign up
      </div>
    </h2>
    <h4>Let's Get Started</h4>
    <p>Sign up in 30 seconds. No credit card required.</p>
    <%= render(partial: "users/registrations/form") %>
    <p>
      By signing up, you accept our
      <a target="_blank" href="https://www.agentbright.com/terms-of-service/" rel="noopener noreferrer">
        Terms of Service
      </a>
      and
      <a target="_blank" href="https://www.iubenda.com/privacy-policy/7900045" rel="noopener noreferrer">
        Privacy Policy
      </a>
    </p>
    <div class="ui hidden divider"></div>
    <div class="ui message">
      <%= render(partial: "users/shared/links") %>
    </div>
  </div>
</div>
