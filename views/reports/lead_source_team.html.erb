<% content_for(:title, "Lead Source Report") %>
<% breadcrumb(:lead_source_reports) %>
<div data-behavior="lead-source-reports">
  <div class="ui masthead vertical segment compressed">
    <div class="ui container">
      <div class="introduction">
        <h1 class="ui header">
          Lead Source Report (Team)
          <div class="sub header">Leads by Marketing Source</div>
        </h1><!-- /.ui header -->
      </div><!-- /.introduction -->

      <div class="ui secondary menu">
        <a class="item active" data-ui-behavior="tab" data-tab="ytd">YTD</a>
        <a class="item" data-ui-behavior="tab" data-tab="last_year">Last Year</a>
        <a class="item" data-ui-behavior="tab" data-tab="past_12_months">Past 12 Months</a>
        <a class="item" data-ui-behavior="tab" data-tab="all">All</a>
      </div>
    </div>
  </div>

  <div class="ui tab transition fade in active" data-tab="ytd">
    <%= render(
      partial: "reports/lead_source/team",
      locals: {
        leads: @leads.incoming_at_during_ytd,
        clients: @clients.incoming_at_during_ytd,
        not_converted_or_junk: @not_converted_or_junk.incoming_at_during_ytd
      }
    ) %>
  </div>

  <div class="ui tab transition fade in" data-tab="last_year">
    <%= render(
      partial: "reports/lead_source/team",
      locals: {
        leads: @leads.incoming_at_during_last_year,
        clients: @clients.incoming_at_during_last_year,
        not_converted_or_junk: @not_converted_or_junk.incoming_at_during_last_year
      }
    ) %>
  </div>

  <div class="ui tab transition fade in" data-tab="past_12_months">
    <%= render(
      partial: "reports/lead_source/team",
      locals: {
        leads: @leads.incoming_at_during_past_12_months,
        clients: @clients.incoming_at_during_past_12_months,
        not_converted_or_junk: @not_converted_or_junk.incoming_at_during_past_12_months
      }
    ) %>
  </div>

  <div class="ui tab transition fade in" data-tab="all">
    <%= render(
      partial: "reports/lead_source/team",
      locals: {
        leads: @leads,
        clients: @clients,
        not_converted_or_junk: @not_converted_or_junk
      }
    ) %>
  </div>
</div>
