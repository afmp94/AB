<%= simple_form_for(@lead, remote: true) do |f| %>
  <%= hidden_field_tag(:inline_form, "bc_buyer_preferences") %>
  <%= f.input(
    :timeframe,
    label: "Timeframe",
    collection: Lead::TIMEFRAMES,
    include_blank: false
  ) %>
  <%= f.input(
    :property_type,
    label: "Property Type",
    collection: Lead::PROPERTY_TYPES,
    include_blank: false
  ) %>
  <%= f.input(
    :buyer_area_of_interest,
    input_html: { class: "form-control" },
    label: "Area of Interest"
  ) %>
  <%= f.input(
    :buyer_prequalified,
    as: :sui_radio_buttons,
    wrapper: :horizontal_inline_radio_buttons,
    label: "Is the buyer prequalified?",
    input_html: { "data-behavior" => "display_fields_based_on_prequal_status" }
  ) %>
  <%= f.input(
    :prequalification_amount,
    label: "Prequalification Amount",
    as: :currency,
    wrapper_html: { class: "prequal-field" }
  ) %>
  <%= f.input(
    :min_price_range,
    label: "Min Price",
    as: :currency
  ) %>
  <%= f.input(
    :max_price_range,
    label: "Max Price",
    as: :currency
  ) %>
  <%= f.button(
    :submit,
    "data-disable-with": "Saving...",
    value: "Save",
    remote: true
  ) %>
  <a data-cancel-section="#client-preferences-section" class="ui basic button">Cancel</a>
<% end %>
