<div class="ui inverted segment">
  <div class="ui relaxed divided inverted list">
    <%= action_list_item(
      title: "This lead responded",
      description: "Log the response from this lead",
      icon_class: "write square",
      link: open_response_modal_path(lead_id: lead.id),
      link_attributes: "data-toggle=tiny-modal data-target=#tinyModal data-remote=true"
    ) %>
    <%= action_list_item(
      title: "Re-open this lead",
      description: "Reactivate this lead",
      icon_class: "reply",
      link_attributes: "data-toggle=modal data-target=#remindMeLaterModal"
    ) %>
  </div><!-- /.ui relaxed divided list -->
</div><!-- /.ui inverted segment -->
<!-- MODALS -->
<% content_for :extra_html_body do %>
  <%= render(partial: "lead_activities/modals/call_result") %>
