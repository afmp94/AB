<%= render(partial: "shared/jserbs/contracts/contract_buyer_close_modal", locals: {lead: @lead, property: @property, contract: @contract}) %>


dynamically_display_commission_contract_fields();
dynamically_display_commission_referral_fields();

var formToValidate = $("[data-form~='contract_form']");
formToValidate
  .formValidation({
    framework: "bootstrap",
    excluded: [':disabled'],
    err: {
      clazz: "error-message"
    },
    fields: {
      "contract[subject]": {
        validators: {
          notEmpty: {
            message: "Please enter a subject for this contract"
          }
        }
      }
    }
  })
  .on('success.form.fv', function(e) {
    // Called when the form is valid
    var $form = $(e.target);
    if ($form.data('remote')) {
      e.preventDefault();
      return false;
    }
  })
  .on('submit', function(e) {
    var $form = $(e.target);
    if ($form.data('remote')) {
      var numInvalidFields = $form.data('formValidation').getInvalidFields().length;
      if (numInvalidFields) {
        e.preventDefault();
        return false;
      }
    }
  });
