<%= simple_form_for(@lead, remote: true) do |f| %>
  <%= hidden_field_tag(:inline_form, "bl_buyer_preferences") %>
  <%= f.input(:buyer_area_of_interest, label: "Area of Interest") %>
  <%= f.input(
    :property_type,
    label: "Property Type",
    collection: Lead::PROPERTY_TYPES,
    include_blank: false
  ) %>
  <%= f.input(:timeframe, collection: Lead::TIMEFRAMES, include_blank: false) %>
  <h3 class="ui header">Price Range</h3>
  <div class="two fields">
    <%= f.input(:min_price_range, label: "Min Price", as: :currency) %>
    <%= f.input(:max_price_range, label: "Max Price", as: :currency) %>
  </div><!-- /.two fields -->
  <%= f.button(
    :submit,
    value: "Save",
    "data-disable-with": "Saving...",
    remote: true
  ) %>
  <a data-cancel-section="#buyer-preferences-section" class="ui basic button">
    Cancel
  </a>
<% end %>
