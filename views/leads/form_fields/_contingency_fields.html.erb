<fieldset>

  <div class="row multiple-fields add-many">
    <div class="col-sm-6">
      <%= f.input :name, input_html: { class: "form-control" },
                  label: false %>
    </div><!-- /.col-xs-8 -->
    <div class="col-xs-5">
      <%= f.input :status, collection: ["Unreleased","Released", "Rejected"],
                  as: :select, include_blank: false, label: false %>
    </div><!-- /.col-xs-4 -->
    <div class="col-xs-1">
      <%= f.hidden_field :_destroy %>
      <%= link_to '#', class: "remove_fields" do %>
        <span class="fui-trash"></span>
      <% end %>
    </div><!-- /.col-xs-2 -->
  </div><!-- /.row multiple-fields -->

</fieldset>